@model LoginViewModel

<h1>Login</h1>
<form asp-controller="Account" asp-action="Login">
    <div class="field">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="user@example.com" />
        <span asp-validation-for="Email" class="text-red"></span>
    </div>
    <div class="field">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="********" />
        <span asp-validation-for="Password" class="text-red"></span>
    </div>
    <div class="field">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
            @Html.DisplayNameFor(m => m.RememberMe)
        </label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-red"></div>
    <div>
        <input type="submit" value="Login" class="btn">
    </div>
</form>
