@model ChangePasswordViewModel

<header class="main-header">
    <h1>Zmena hesla</h1>
    <div class="buttons">
        <a asp-controller="Account" asp-action="Index" class="button button-with-icon">
            <span class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
                </svg>
            </span>
            <span>Používateľský účet</span>
        </a>
    </div>
</header>

<partial name="_SuccessMessage" />
<partial name="_ErrorMessages"/>

<form asp-controller="Account" asp-action="ChangePassword">
    <div class="field">
        <label asp-for="CurrentPassword" class="label"></label>
        <div class="control">
            <input asp-for="CurrentPassword" class="input" placeholder="********" required>
        </div>
    </div>
    
    <div class="field">
        <label asp-for="NewPassword" class="label"></label>
        <div class="control">
            <input asp-for="NewPassword" class="input" placeholder="********" required>
        </div>
    </div>
    
    <div class="field">
        <label asp-for="ConfirmNewPassword" class="label"></label>
        <div class="control">
            <input asp-for="ConfirmNewPassword" class="input" placeholder="********" required>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button type="submit" class="button is-link">Zmeniť heslo</button>
        </div>
    </div>
</form>