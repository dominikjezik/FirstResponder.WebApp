@model UserFormDTO

<header class="main-header">
    <h1>Pridať nového respondera</h1>
    <div class="buttons">
        <a asp-controller="Users" asp-action="Index" class="button button-with-icon">
            <span class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
                </svg>
            </span>
            <span>Späť na prehľad responderov</span>
        </a>
    </div>
</header>

<div class="user-details-page">
    <form asp-controller="Users" asp-action="Create" class="user-details-form">
        <div asp-validation-summary="All" class="text-red"></div>
        <div class="field">
            <label asp-for="Email" class="label">Email *</label>
            <div class="control">
                <input asp-for="Email" class="input" placeholder="john@example.com">
            </div>
        </div>

        <div class="field">
            <label asp-for="FullName" class="label">Meno *</label>
            <div class="control">
                <input asp-for="FullName" class="input" placeholder="John Doe">
            </div>
        </div>

        <div class="field">
            <label asp-for="PhoneNumber" class="label">Mobil *</label>
            <div class="control">
                <input asp-for="PhoneNumber" class="input" placeholder="0901234567">
            </div>
        </div>

        <div class="field">
            <label asp-for="DateOfBirth" class="label">Dátum narodenia *</label>
            <div class="control">
                <input asp-for="DateOfBirth" class="input">
            </div>
        </div>

        <div class="field">
            <label asp-for="Address" class="label">Adresa</label>
            <div class="control">
                <input asp-for="Address" class="input" placeholder="Adresa 123">
            </div>
        </div>

        <div class="field">
            <label asp-for="PostalCode" class="label">PSČ</label>
            <div class="control">
                <input asp-for="PostalCode" class="input" placeholder="123 45">
            </div>
        </div>

        <div class="field">
            <label asp-for="City" class="label">Mesto</label>
            <div class="control">
                <input asp-for="City" class="input" placeholder="Mesto">
            </div>
        </div>

        <div class="field">
            <label asp-for="Region" class="label">Kraj *</label>
            <div class="control">
                <div class="select select-full-width">
                    <select asp-for="Region" asp-items="Html.GetEnumSelectList<RegionOfState>()">
                    </select>
                </div>
            </div>
        </div>

        <div class="field">
            <label asp-for="Notes" class="label">Poznámka</label>
            <div class="control">
                <textarea asp-for="Notes" class="textarea"></textarea>
            </div>
        </div>

        <div class="field">
            <label class="label">Stav</label>
            <div class="control">
                <div class="select select-full-width">
                    <select asp-for="UserType" asp-items="Html.GetEnumSelectList<UserType>()">
                    </select>
                </div>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button type="submit" class="button is-link">Uložiť</button>
            </div>
        </div>
    </form>
    
    <aside class="user-details-aside"></aside>
</div>
