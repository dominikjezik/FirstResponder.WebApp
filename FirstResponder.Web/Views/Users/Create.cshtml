<header class="main-header">
    <h1>Pridať nového respondera</h1>
    <div class="buttons">
        <a asp-controller="Users" asp-action="Index" class="button button-with-icon">
            <span class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
                </svg>
            </span>
            <span>Späť na prehľad responderov</span>
        </a>
    </div>
</header>

<div class="user-details-page">
    <form class="user-details-form">
        <div class="field">
            <label class="label">Email *</label>
            <div class="control">
                <input class="input" type="email" placeholder="john@example.com" required>
            </div>
        </div>
        
        <div class="field">
            <label class="label">Meno *</label>
            <div class="control">
                <input class="input" type="text" placeholder="John Doe" required>
            </div>
        </div>
        
        <div class="field">
            <label class="label">Mobil *</label>
            <div class="control">
                <input class="input" type="text" placeholder="0901234567" required>
            </div>
        </div>
        
        <div class="field">
            <label class="label">Dátum narodenia</label>
            <div class="control">
                <input class="input" type="date">
            </div>
        </div>
        
        <div class="field">
            <label class="label">Adresa</label>
            <div class="control">
                <input class="input" type="text" placeholder="Adresa 123">
            </div>
        </div>
        
        <div class="field">
            <label class="label">PSČ</label>
            <div class="control">
                <input class="input" type="text" placeholder="123 45">
            </div>
        </div>
        
        <div class="field">
            <label class="label">Mesto</label>
            <div class="control">
                <input class="input" type="text" placeholder="Mesto">
            </div>
        </div>
        
        <div class="field">
            <label class="label">Kraj</label>
            <div class="control">
                <div class="select select-full-width">
                    <select>
                        <option>Trenčiansky kraj</option>
                    </select>
                </div>
            </div>
        </div>
        
        <div class="field">
            <label class="label">Poznámka</label>
            <div class="control">
                <textarea class="textarea"></textarea>
            </div>
        </div>
        
        <div class="field">
            <label class="label">Stav</label>
            <div class="control">
                <div class="select select-full-width">
                    <select>
                        <option>Nezaradený</option>
                        <option>Responder</option>
                        <option>Zamestnanec</option>
                    </select>
                </div>
            </div>
        </div>
        
        <div class="field">
            <div class="control">
                <button class="button is-link">Uložiť</button>
            </div>
        </div>
    </form>
    
    <aside class="user-details-aside"></aside>
</div>



