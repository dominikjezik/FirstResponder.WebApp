@using FirstResponder.ApplicationCore.Common.Enums
@model AedFormViewModel

<section class="form-section">
    <h2>Umiestnenie</h2>
    <div class="field">
        <label asp-for="AedFormDTO.Holder" class="label">Držateľ *</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.Holder" required>
        </div>
    </div>

    <div class="field">
        <label asp-for="AedFormDTO.Address" class="label">Ulica, číslo *</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.Address" required>
        </div>
    </div>

    <div class="field">
        <label asp-for="AedFormDTO.City" class="label">Mesto *</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.City" required>
        </div>
    </div>

    <div class="field">
        <label asp-for="AedFormDTO.PostalCode" class="label">PSČ *</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.PostalCode" required>
        </div>
    </div>

    <div class="field">
        <label asp-for="AedFormDTO.Region" class="label">Kraj *</label>
        <div class="control">
            <div class="select select-full-width">
                <select asp-for="AedFormDTO.Region" asp-items="Html.GetEnumSelectList<RegionOfState>()">
                </select>
            </div>
        </div>
    </div>

    <div class="field">
        <label asp-for="AedFormDTO.Latitude" class="label">Zemepisná šírka</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.Latitude" type="number" step=".000001" min="-90" max="90">
        </div>
    </div>

    <div class="field">
        <label asp-for="AedFormDTO.Longitude" class="label">Zemepisná dĺžka</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.Longitude" type="number" step=".000001" min="-90" max="90">
        </div>
    </div>
        
    <div class="field">
        <label asp-for="AedFormDTO.DescriptionLocation" class="label">Popis</label>
        <div class="control">
            <textarea class="textarea" asp-for="AedFormDTO.DescriptionLocation"></textarea>
        </div>
    </div>
</section>

<section class="form-section">
    <h2>Dostupnosť</h2>
    <div class="field">
        <label class="label">Dostupnosť</label>
        <div class="control">
            <div class="select select-full-width">
                <select id="selectAvailabilityType" asp-for="AedFormDTO.AvailabilityType" asp-items="Html.GetEnumSelectList<AedAvailabilityType>()">
                </select>
            </div>
        </div>
    </div>
    
    <div class="field" id="divAvailabilityTime">
        <label class="label">Dostupnosť v čase (od - do)*</label>
        <div class="control control-multiple-inputs">
            <input asp-for="AedFormDTO.AvailabilityTimeFrom" class="input" type="time">
            <input asp-for="AedFormDTO.AvailabilityTimeTo" class="input" type="time">
        </div>
    </div>
    
    <div class="field" id="divAvailabilityDays">
        <label class="label">Dostupnosť v dňoch</label>
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="AedFormDTO.AvailabilityMonday">
                Pondelok
            </label>
        </div>
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="AedFormDTO.AvailabilityTuesday">
                Utorok
            </label>
        </div>
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="AedFormDTO.AvailabilityWednesday">
                Streda
            </label>
        </div>
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="AedFormDTO.AvailabilityThursday">
                Štvrtok
            </label>
        </div>
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="AedFormDTO.AvailabilityFriday">
                Piatok
            </label>
        </div>
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="AedFormDTO.AvailabilitySaturday">
                Sobota
            </label>
        </div>
        <div class="control">
            <label class="checkbox">
                <input type="checkbox" asp-for="AedFormDTO.AvailabilitySunday">
                Nedeľa
            </label>
        </div>
    </div>
    
    <div class="field" id="divAvailabilityDate">
        <label class="label">Dostupnosť v termíne (od - do)*</label>
        <div class="control control-multiple-inputs">
            <input asp-for="AedFormDTO.AvailabilityDateFrom" class="input" type="date">
            <input asp-for="AedFormDTO.AvailabilityDateTo" class="input" type="date">
        </div>
    </div>
    
    <div class="field">
        <div class="field">
            <label class="label">Popis dostupnosti</label>
            <div class="control">
                <textarea asp-for="AedFormDTO.AvailabilityDescription" class="textarea"></textarea>
            </div>
        </div>
    </div>
</section>

<section class="form-section">
    <h2>Kontaktná osoba</h2>
    <div class="field">
        <label asp-for="AedFormDTO.ContactPerson" class="label">Meno</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.ContactPerson">
        </div>
    </div>
    
    <div class="field">
        <label asp-for="AedFormDTO.ContactPersonPhone" class="label">Telefón</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.ContactPersonPhone">
        </div>
    </div>
    
    <div class="field">
        <label asp-for="AedFormDTO.ContactPersonEmail"  class="label">Email</label>
        <div class="control">
            <input class="input" asp-for="AedFormDTO.ContactPersonEmail">
        </div>
    </div>
</section>