@model FirstResponder.ApplicationCore.Courses.DTOs.CourseFormDTO
@{
    ViewBag.Title = "Vytvoriť nové školenie";
}

<header class="main-header">
    <h1>Vytvoriť nové školenie</h1>
    <div class="buttons">
        <a asp-controller="Courses" asp-action="Index" class="button button-with-icon">
            <span class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
                </svg>
            </span>
            <span>Prehľad školení</span>
        </a>
    </div>
</header>

<partial name="_SuccessMessage" />

<div class="entity-details-page">
    <div class="entity-details-form">
        <form asp-controller="Courses" asp-action="Create">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="message is-danger">
                    <div asp-validation-summary="All" class="message-body mb-1"></div>
                </div>
            }
            
            <div class="field">
                <label class="label">Názov *</label>
                <div class="control">
                    <input asp-for="Name" class="input" required>
                </div>
            </div>
            
            <div class="field">
                <label class="label">Typ školenia</label>
                <div class="control">
                    <div class="select select-full-width">
                        <select asp-for="CourseTypeId">
                            <option value="">TODO !</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="field">
                <label class="label">Začiatok *</label>
                <div class="control">
                    <input asp-for="StartDate" class="input" type="datetime-local" required>
                </div>
            </div>
            
            <div class="field">
                <label class="label">Ukončenie *</label>
                <div class="control">
                    <input asp-for="EndDate" class="input" type="datetime-local" required>
                </div>
            </div>
            
            <div class="field">
                <label class="label">Miesto</label>
                <div class="control">
                    <textarea asp-for="Location" class="textarea" rows="2"></textarea>
                </div>
            </div>
            
            <div class="field">
                <label class="label">Školiteľ</label>
                <div class="control">
                    <input asp-for="Trainer" class="input">
                </div>
            </div>
            
            <div class="field">
                <label class="label">Popis</label>
                <div class="control">
                    <textarea asp-for="Description" class="textarea" rows="4"></textarea>
                </div>
            </div>
            
            <div class="field">
                <div class="control flex-space-between">
                    <button type="submit" class="button is-link">Vytvoriť školenie</button>
                </div>
            </div>
        </form>
    </div>

    <aside class="entity-details-aside"></aside>
</div>
