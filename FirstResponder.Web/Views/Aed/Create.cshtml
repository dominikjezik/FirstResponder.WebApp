@model AedFormDTO

<header class="main-header">
    <h1>Pridať nové AED</h1>
    <div class="buttons">
        <a asp-controller="Aed" asp-action="Index" class="button button-with-icon">
            <span class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
                </svg>
            </span>
            <span>Späť na prehľad AED</span>
        </a>
    </div>
</header>

<div class="user-details-page" x-data="{ formType: '@AedGeneralType.Public' }">
    <form asp-controller="Aed" asp-action="Create" class="user-details-form">
        <div asp-validation-summary="All" class="text-red"></div>
        <section class="form-section">
            <div class="field">
                <label class="label">Typ</label>
                <div class="control">
                    <label class="radio">
                        <input type="radio" name="GeneralType" value="@AedGeneralType.Public" id="radio-public-aed" x-model="formType" checked>
                        Verejný
                    </label>
                    <label class="radio">
                        <input type="radio" name="GeneralType" value="@AedGeneralType.Personal" id="radio-personal-aed" x-model="formType">
                        Osobný
                    </label>
                </div>
            </div>
            
            <div class="field">
                <label class="label">Stav *</label>
                <div class="control">
                    <div class="select select-full-width">
                        <select asp-for="State" asp-items="Html.GetEnumSelectList<AedState>()">
                        </select>
                    </div>
                </div>
            </div>
        </section>
        
        <template x-if="formType == '@AedGeneralType.Public'">
            <div>
                <partial name="_PublicAedFormPartial" />
            </div>
        </template> 
    
        <template x-if="formType == '@AedGeneralType.Personal'">
            <partial name="_PersonalAedFormPartial" />
        </template>
    
        <partial name="_AedTechnicalDetailsFormPartial"/>

        <div class="field">
            <div class="control">
                <button id="submit-btn" class="button is-link" type="submit">Uložiť</button>
            </div>
        </div>
    </form>
    
    <aside class="user-details-aside">
        <section x-show="formType == '@AedGeneralType.Public'">
            <h2 class="heading-with-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                </svg>
                Umiestnenie
            </h2>
            <div id="map" style="height: 300px; margin-bottom: 1rem;"></div>
        </section>
        
        <template x-if="formType == '@AedGeneralType.Public'">
            <section>
                <template x-if="formType == '@AedGeneralType.Public'">
                    <header class="section-header">
                        <h2 class="heading-with-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-images" viewBox="0 0 16 16">
                                <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                                <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z"/>
                            </svg>
                            Fotografie
                        </h2>
                        <button class="button" disabled>Pridať fotografiu</button>
                    </header>
                </template>

                <div class="mb-5">
                    Neboli nahraté žiadne fotografie.
                </div>
            </section>
        </template>
    </aside>
</div>

@section StyleSheets
{
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="">
}

@section Scripts
{
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script>
        let map = L.map('map').setView([48.684, 19.677], 16);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
        
        let marker = L.marker([48.684, 19.677]).addTo(map);
        //marker.bindPopup("Môj marker").openPopup();
    </script>
    
    <script src="~/js/find-users-aed.js"></script>
}
